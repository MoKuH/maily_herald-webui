- if @item.generic_mailer?

  %h2.border
    = tw("mailings.template")
    - unless @item.locked?
      = link_to({action: "edit", id: @item, :edited_container => "template"}, :remote => true, :class => "link link-sm") do
        = icon(:pencil)
        = tw("commons.edit")
  .dl-horizontal
    %dt= tw("attributes.subject")
    %dd= @item.subject

  .templates
    %ul.nav.nav-tabs{role: "tablist"}
      - if @item.html? || @item.mixed?
        %li.active
          %a{"data-toggle" => "tab", href: "#html", role: "tab"}
            HTML
            - if @item.mixed? && @item.template_html.blank?
              = icon :cogs, "", class: "auto-gen-template", title: tw("mailings.html_template_autogenerated")
      - if @item.plain? || @item.mixed?
        %li{class: @item.plain? ? "active" : ""}
          %a{"data-toggle" => "tab", href: "#plain", role: "tab"}
            PLAIN
            - if @item.mixed? && @item.template_plain.blank?
              = icon :cogs, "", class: "auto-gen-template", title: tw("mailings.plain_template_autogenerated")

    .tab-content
      #html.tab-pane.fade.in.active
        %iframe{src: preview_html_template_path(@item), width: "100%", "height" => "400px", frameborder: 0}
      #plain.tab-pane.fade
        %pre= @item.template.plain

- else
  %h2.border
    = tw("mailings.template")
  %p= tw("mailings.infos.non_generic_mailer", mailer: display_mailing_mailer(@item.mailer_name).html_safe, generic_mailer: display_mailing_mailer(:generic)).html_safe
